<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:text="相机"
                android:id="@+id/bt_camera"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="安装"
                android:id="@+id/bt_install"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="系统浮窗"
                android:id="@+id/bt_alert"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="日历"
                android:id="@+id/bt_calendar"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="读写权限"
                android:id="@+id/bt_read_write"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:text="录音"
                android:id="@+id/bt_record"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="手机状态"
                android:id="@+id/bt_phone_state"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="修改设置"
                android:id="@+id/bt_write_setting"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="收发短信"
                android:id="@+id/bt_sms"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="蓝牙"
                android:id="@+id/bt_bluetooth"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="多个权限"
                android:id="@+id/bt_many"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hello World!"
        android:id="@+id/aaa" />

</LinearLayout>